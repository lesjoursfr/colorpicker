{
	"name": "@lesjoursfr/colorpicker",
	"version": "6.0.1",
	"description": "Colorpicker is a modular color picker plugin.",
	"license": "MIT",
	"repository": "lesjoursfr/colorpicker",
	"homepage": "https://github.com/lesjoursfr/colorpicker#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/colorpicker/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"browserslist": [
		"> 1%",
		"last 3 versions",
		"not dead"
	],
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"eslint-check": "eslint . --ext .js,.jsx,.ts,.tsx",
		"eslint-fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"stylelint-check": "stylelint **/*.scss",
		"stylelint-fix": "stylelint **/*.scss --fix",
		"prettier-check": "prettier --check .",
		"prettier-fix": "prettier --write .",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' mocha",
		"build-esm": "tsc && node assets.js",
		"build-browser": "webpack --mode production --config ./server/webpack.config.js --progress",
		"build": "npm run build-esm && npm run build-browser",
		"server": "webpack serve --mode development --config ./server/webpack.config.js --hot --open"
	},
	"files": [
		"src/**/*",
		"dist/**/*",
		"build/**/*"
	],
	"keywords": [
		"colorpicker",
		"color",
		"picker"
	],
	"devDependencies": {
		"@popperjs/core": "^2.11.8",
		"@tsconfig/next": "^2.0.1",
		"@types/color": "^3.0.5",
		"@types/jsdom": "^21.1.4",
		"@types/mocha": "^10.0.3",
		"@types/node": "^20.8.10",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"color": "^4.2.3",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"fs-extra": "^11.1.1",
		"jsdom": "^22.1.0",
		"mini-css-extract-plugin": "^2.7.6",
		"mocha": "^10.2.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"sass": "^1.69.5",
		"sass-loader": "^13.3.2",
		"stylelint": "^15.11.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"terser-webpack-plugin": "^5.3.9",
		"ts-loader": "^9.5.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"peerDependencies": {
		"@popperjs/core": "^2.11.8"
	},
	"packageManager": "yarn@4.0.1"
}
