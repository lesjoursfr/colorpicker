{
	"name": "@lesjoursfr/colorpicker",
	"version": "4.0.1",
	"description": "Colorpicker is a modular color picker plugin.",
	"license": "MIT",
	"repository": "lesjoursfr/colorpicker",
	"homepage": "https://github.com/lesjoursfr/colorpicker#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/colorpicker/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=16.15.1 || >=18.4.0"
	},
	"browserslist": [
		"Chrome >= 60",
		"Safari >= 12",
		"iOS >= 12",
		"Firefox >= 60",
		"Edge >= 79"
	],
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"stylelint-check": "stylelint-config-prettier-check",
		"eslint-check": "eslint-config-prettier src/index.js",
		"check-js": "eslint . --ext .js",
		"check-sass": "stylelint **/*.scss",
		"check-style": "prettier --check .",
		"lint-js": "eslint . --fix --ext .js",
		"lint-sass": "stylelint **/*.scss --fix",
		"format": "prettier --write .",
		"test": "npx ava",
		"server": "webpack serve --mode development --config server/colorpicker.webpack.js --hot --open"
	},
	"files": [
		"src/**/*"
	],
	"keywords": [
		"colorpicker",
		"color",
		"picker"
	],
	"devDependencies": {
		"@babel/core": "^7.19.3",
		"@babel/preset-env": "^7.19.3",
		"@popperjs/core": "^2.11.6",
		"@types/color": "^3.0.3",
		"ava": "^5.0.1",
		"babel-loader": "^9.0.0",
		"color": "^4.2.3",
		"css-loader": "^6.7.1",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.3.0",
		"eslint-plugin-promise": "^6.0.1",
		"jsdom": "^20.0.1",
		"mini-css-extract-plugin": "^2.6.1",
		"postcss": "^8.4.17",
		"prettier": "^2.7.1",
		"sass": "^1.55.0",
		"sass-loader": "^13.0.2",
		"style-loader": "^3.3.1",
		"stylelint": "^14.13.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.11.1"
	},
	"peerDependencies": {
		"@popperjs/core": "^2.11.6"
	},
	"packageManager": "yarn@3.2.3"
}
